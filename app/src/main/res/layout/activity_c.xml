<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityC"
    android:background="#2196f3">

    <Button
        android:id="@+id/openAFromC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open ActivityA"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20mm"
        />

    <Button
        android:id="@+id/openDFromC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open ActivityD"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30mm"
        />

    <Button
        android:id="@+id/closeC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close ActivityC"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50mm"
        />

    <Button
        android:id="@+id/closeStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Stack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70mm"
        />


</FrameLayout>